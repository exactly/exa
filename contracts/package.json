{
  "name": "@exactly/plugin",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build": "forge build",
    "prepare": "[ \"$EAS_BUILD_RUNNER\" != eas-build ] || (export FOUNDRY_DIR=${FOUNDRY_DIR-$HOME/workingdir} && curl -L https://foundry.paradigm.xyz | bash || true && foundryup -i v1.3.6)",
    "snapshot": "FOUNDRY_PROFILE=snapshot forge snapshot --force",
    "test": "nx test contracts",
    "test:fmt": "forge fmt --check",
    "test:gas": "FOUNDRY_PROFILE=snapshot forge snapshot --force --check",
    "test:solhint": "solhint --max-warnings 0 '**/*.sol'",
    "test:slither": "slither . --skip-clean",
    "test:coverage": "forge coverage --report lcov",
    "test:sizes": "forge build --sizes --skip test --skip script"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "modular-account": "alchemyplatform/modular-account#c81e712",
    "modular-account-libs": "erc6900/modular-account-libs#v0.7.1",
    "solady": "^0.1.26",
    "webauthn-owner-plugin": "exactly/webauthn-owner-plugin#9c0c38b",
    "webauthn-sol": "base/webauthn-sol#v1.0.0"
  },
  "devDependencies": {
    "@exactly/protocol": "^0.2.22",
    "@openzeppelin/contracts-upgradeable-v4": "npm:@openzeppelin/contracts-upgradeable@^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/contracts-v4": "npm:@openzeppelin/contracts@^4.9.6",
    "account-abstraction": "eth-infinitism/account-abstraction#v0.6.0",
    "forge-std": "foundry-rs/forge-std#v1.10.0",
    "fresh-crypto-lib": "rdubois-crypto/FreshCryptoLib#fd2a0e6",
    "solhint": "^6.0.1",
    "solmate": "transmissions11/solmate#v7",
    "surl": "memester-xyz/surl",
    "typescript": "^5.8.3"
  },
  "nx": {
    "projectType": "application",
    "namedInputs": {
      "production": [
        "default",
        "!{projectRoot}/test/**/*",
        "!{projectRoot}/broadcast/*/31337/**/*"
      ]
    },
    "targets": {
      "build": {
        "parallelism": false,
        "outputs": [
          "{projectRoot}/out",
          "{projectRoot}/cache"
        ]
      },
      "snapshot": {
        "outputs": [
          "{projectRoot}/.gas-snapshot"
        ],
        "cache": true
      },
      "test": {
        "dependsOn": [
          "test:fmt",
          "test:solhint",
          "test:sizes",
          "test:gas",
          "test:slither",
          "test:coverage"
        ],
        "executor": "nx:noop"
      },
      "test:sizes": {
        "parallelism": false,
        "outputs": [
          "{projectRoot}/out",
          "{projectRoot}/cache"
        ]
      },
      "test:gas": {
        "parallelism": false,
        "outputs": [
          "{projectRoot}/out",
          "{projectRoot}/cache",
          "{projectRoot}/.gas-snapshot"
        ]
      },
      "test:slither": {
        "parallelism": false,
        "outputs": [
          "{projectRoot}/out",
          "{projectRoot}/cache"
        ]
      },
      "test:coverage": {
        "parallelism": false,
        "outputs": [
          "{projectRoot}/out",
          "{projectRoot}/cache",
          "{projectRoot}/lcov.info"
        ]
      }
    }
  }
}
