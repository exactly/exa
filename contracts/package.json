    "webauthn-sol": "base-org/webauthn-sol"
  },
  "devDependencies": {
    "account-abstraction": "eth-infinitism/account-abstraction#v0.6.0",
    "forge-std": "foundry-rs/forge-std#v1.9.1",
    "fresh-crypto-lib": "rdubois-crypto/FreshCryptoLib",
