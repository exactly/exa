    "react-native-svg": "~15.12.1",
    "react-native-worklets": "0.5.1",
    "react-onesignal": "^3.4.6",
    "tamagui": "catalog:",
    "title-case": "^4.3.2",
    "valibot": "catalog:",
    "viem": "catalog:",
    "wagmi": "catalog:"
  },
  "devDependencies": {
