    "@expo/fingerprint": "^0.15.4",
    "@nx/esbuild": "22.3.3",
    "@nx/eslint": "22.3.3",
    "@nx/eslint-plugin": "22.3.3",
    "@nx/js": "22.3.3",
    "@spotlightjs/spotlight": "^4.10.0",
    "@svgr/core": "^8.1.0",
    "@tamagui/babel-plugin": "catalog:",
    "@types/babel__core": "^7.20.5",
    "@types/fast-text-encoding": "^1.0.3",
    "@types/node": "^25.0.8",
    "@types/react": "~19.1.10",
    "babel-plugin-istanbul": "^7.0.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "~54.0.0",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-react-native": "^5.0.0",
    "expo-build-properties": "~1.0.10",
    "expo-dev-client": "~6.0.20",
    "expo-doctor": "^1.17.14",
    "gitmojis": "^3.15.0",
    "hono-rate-limiter": "^0.4.2",
    "markdownlint-cli": "^0.47.0",
    "metro-config": "^0.81.0",
    "nx": "22.3.3",
    "onesignal-expo-plugin": "^2.0.3",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react-native-svg-transformer": "^1.5.2",
    "sharp": "^0.34.5",
    "sharp-cli": "^5.2.0",
    "svgo": "^4.0.0",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "@wagmi/core": "catalog:",
      "esbuild@0.18.20": "^0.25.0",
      "glob@11.0.3": "^11.1.0",
      "semver@7.3.2": "^7.5.2",
      "tmp@0.0.33": "^0.2.4",
      "typescript@5.8.3": "catalog:",
      "unicorn-magic@0.3.0": "^0.2.0",
      "@anthropic-ai/claude-code": "npm:@favware/skip-dependency@1.2.2",
      "@bigmi/core": "npm:@favware/skip-dependency@1.2.2",
      "@gnosis.pm/safe-contracts": "npm:@favware/skip-dependency@1.2.2",
      "@mysten/sui": "npm:@favware/skip-dependency@1.2.2",
      "@mysten/wallet-standard": "npm:@favware/skip-dependency@1.2.2",
      "@nomiclabs/hardhat-etherscan": "npm:@favware/skip-dependency@1.2.2",
      "@solana/wallet-adapter-base": "npm:@favware/skip-dependency@1.2.2",
      "@solana/web3.js": "npm:@favware/skip-dependency@1.2.2",
      "@thehubbleproject/bls": "npm:@favware/skip-dependency@1.2.2",
      "@typechain/hardhat": "npm:@favware/skip-dependency@1.2.2",
      "@types/mocha": "npm:@favware/skip-dependency@1.2.2",
      "@wagmi/connectors": "npm:@favware/skip-dependency@1.2.2",
      "bech32": "npm:@favware/skip-dependency@1.2.2",
      "bs58": "npm:@favware/skip-dependency@1.2.2",
      "bitcoinjs-lib": "npm:@favware/skip-dependency@1.2.2",
      "ethereumjs-util": "npm:@favware/skip-dependency@1.2.2",
      "ethereumjs-wallet": "npm:@favware/skip-dependency@1.2.2",
      "hardhat-deploy": "npm:@favware/skip-dependency@1.2.2",
      "hardhat-deploy-ethers": "npm:@favware/skip-dependency@1.2.2",
      "solidity-coverage": "npm:@favware/skip-dependency@1.2.2"
    },
    "patchedDependencies": {
      "@lifi/sdk": "patches/@lifi__sdk.patch",
      "embedded-postgres": "patches/embedded-postgres.patch",
      "eslint-config-universe": "patches/eslint-config-universe.patch",
      "react-native-svg-transformer": "patches/react-native-svg-transformer.patch"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@expo/fingerprint",
        "@expo/metro-runtime",
        "@hono/valibot-validator",
        "@lifi/sdk",
        "@openzeppelin/contracts-v4",
        "@openzeppelin/contracts-upgradeable-v4",
        "@react-native-async-storage/async-storage",
        "@react-navigation/bottom-tabs",
        "@tanstack/react-form",
        "@types/react",
        "account-abstraction",
        "babel-preset-expo",
        "expo-asset",
        "expo-build-properties",
        "expo-camera",
        "expo-clipboard",
        "expo-dev-client",
        "expo-font",
        "expo-image",
        "expo-insights",
        "expo-linear-gradient",
        "expo-linking",
        "expo-router",
        "expo-status-bar",
        "expo-system-ui",
        "expo-updates",
        "expo-web-browser",
        "hono-openapi",
        "hono-rate-limiter",
        "metro-config",
        "react",
        "react-dom",
        "react-native",
        "react-native-quick-crypto",
        "react-native-reanimated",
        "react-native-safe-area-context",
        "react-native-screens",
        "react-native-svg",
        "react-native-worklets"
      ]
    },
    "neverBuiltDependencies": [],
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "$typescript"
      },
      "ignoreMissing": [
        "hardhat",
        "hono-rate-limiter",
        "typechain"
      ]
    },
    "auditConfig": {
      "ignoreGhsas": [
        "GHSA-848j-6mx2-7j84"
      ]
    }
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "enabled": true
      }
    },
    "install": {
      "exclude": [
        "@sentry/react-native"
      ]
    }
  },
  "nx": {
    "projectType": "application",
    "namedInputs": {
      "default": [
        "{projectRoot}/patches/**/*",
        "{projectRoot}/src/**/*",
        "sharedGlobals",
        "!{projectRoot}/common/**/*",
        "!{projectRoot}/contracts/**/*",
        "!{projectRoot}/docs/**/*",
        "!{projectRoot}/server/**/*",
        "!{projectRoot}/src/generated/**/*",
        {
          "env": "APP_DOMAIN"
        },
        {
          "env": "EAS_BUILD_RUNNER"
        },
        {
          "env": "EXPO_PUBLIC_INTERCOM_APP_ID"
        },
        {
          "env": "NODE_ENV"
        }
      ]
    },
    "targets": {
      "prepare": {
        "dependsOn": [
          "generate:expo",
          "generate:release",
          "generate:version"
        ],
        "executor": "nx:noop"
      },
      "generate:expo": {
        "dependsOn": [
          "generate:version"
        ],
        "outputs": [
          "{projectRoot}/expo-env.d.ts"
        ]
      },
      "generate:release": {
        "dependsOn": [
          "prepare:generated",
          {
            "projects": "@exactly/common",
            "target": "git:unshallow"
          }
        ],
        "inputs": [],
        "outputs": [
          "{projectRoot}/generated/release.js"
        ],
        "cache": false
      },
      "generate:version": {
        "dependsOn": [
          "prepare:generated",
          {
            "projects": "@exactly/common",
            "target": "git:unshallow"
          }
        ],
        "inputs": [],
        "outputs": [
          "{projectRoot}/generated/versionCode.js"
        ],
        "cache": false
      },
      "start": {
        "dependsOn": [
          "prepare",
          "^prepare"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "continuous": true
      },
      "android": {
        "dependsOn": [
          "prepare",
          "^prepare"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "continuous": true
      },
      "ios": {
        "dependsOn": [
          "prepare",
          "^prepare"
        ],
        "inputs": [
          "production",
          "^production"
        ],
        "continuous": true
      },
      "web": {
        "dependsOn": [
          "prepare",
          "^prepare"
        ],
        "inputs": [
          "production",
          "^production"
        ],
        "continuous": true
      },
      "e2e:dev:ios": {
        "continuous": true,
        "dependsOn": [
          "prepare",
          "^prepare",
          {
            "projects": "@exactly/server",
            "target": "e2e"
          },
          {
            "projects": "@exactly/e2e",
            "target": "dev"
          }
        ],
        "inputs": [
          "production",
          "^production"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "expo run:ios",
          "env": {
            "APP_DOMAIN": "localhost",
            "CHAIN_ID": "31337",
            "EXPO_PUBLIC_ENV": "e2e"
          }
        }
      },
      "e2e:ios": {
        "inputs": [
          "production",
          "^production"
        ],
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "rm -rf build/Exa.app build/Exa.tar.gz",
            "pnpx eas-cli build --platform=ios --profile=e2e:local --local --output=build/Exa.tar.gz",
            "open -a Simulator",
            "tar -xzf build/Exa.tar.gz -C build",
            "xcrun simctl install booted build/Exa.app"
          ],
          "parallel": false
        }
      },
      "test": {
        "dependsOn": [
          "test:spell",
          "test:deps",
          "test:build",
          "test:ts",
          "test:markdown",
          "test:changeset",
          "test:eslint"
        ],
        "executor": "nx:noop"
      }
    }
  },
  "private": true
}
