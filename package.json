    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.19",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "expo-updates": "~29.0.16",
    "expo-web-browser": "~15.0.10",
    "fast-text-encoding": "^1.0.6",
    "hono": "^4.11.4",
    "i18n-iso-countries": "^7.14.0",
    "i18next": "^25.7.4",
    "moti": "^0.30.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^16.5.3",
