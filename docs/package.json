{
  "name": "@exactly/docs",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "prepare": "nx generate:astro docs",
    "generate:astro": "astro sync",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.36.2",
    "@exactly/server": "workspace:^0.2.13",
    "astro": "^5.16.0",
    "astro-mermaid": "^1.1.0",
    "mermaid": "^11.12.1",
    "openapi-types": "^12.1.3",
    "sharp": "^0.34.1",
    "starlight-openapi": "^0.21.1"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "generate:astro": {
        "outputs": [
          "{projectRoot}/.astro"
        ]
      },
      "build": {
        "dependsOn": [
          {
            "projects": "@exactly/server",
            "target": "generate:openapi"
          }
        ]
      }
    }
  }
}
