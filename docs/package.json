{
  "name": "@exactly/docs",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "prepare": "nx generate:astro docs",
    "generate:astro": "astro sync",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview"
  },
  "engines": {
    "node": "^24.13.0"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.37.3",
    "@eslint/markdown": "^7.5.1",
    "@exactly/common": "workspace:^0.0.10",
    "@exactly/server": "workspace:^0.2.13",
    "astro": "^5.16.10",
    "astro-mermaid": "^1.2.0",
    "eslint": "^9.39.2",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-astro": "^1.5.0",
    "mermaid": "^11.12.2",
    "openapi-types": "^12.1.3",
    "starlight-openapi": "^0.21.1"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "generate:astro": {
        "outputs": [
          "{projectRoot}/.astro"
        ]
      },
      "build": {
        "dependsOn": [
          {
            "projects": "@exactly/server",
            "target": "generate:openapi"
          }
        ],
        "inputs": [
          "production",
          "^production",
          {
            "dependentTasksOutputFiles": "server/generated/openapi.json"
          }
        ]
      }
    }
  }
}
