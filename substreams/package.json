{
  "name": "@exactly/substreams",
  "scripts": {
    "build": "cargo build --release --quiet",
    "prepare": "tsx $([ -f .env ] && echo --env-file=.env) substreams.ts",
    "test": "pnpm build && pnpm run --aggregate-output --reporter-hide-prefix /test:/",
    "test:fmt": "cargo fmt --check",
    "test:clippy": "cargo clippy --quiet -- --deny warnings",
    "test:proto": "protolint ."
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.54.0",
    "@exactly/server": "workspace:^0.2.2",
    "@types/handlebars-helpers": "^0.5.6",
    "handlebars": "^4.7.8",
    "handlebars-helpers": "^0.10.0",
    "protolint": "^0.55.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
