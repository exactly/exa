specVersion: v0.1.0
package:
  name: exactly
  version: v0.1.0
protobuf:
  files:
    - exa.proto
  importPaths:
    - proto
imports:
  sql: https://github.com/streamingfast/substreams-sink-sql/releases/download/protodefs-v1.0.7/substreams-sink-sql-protodefs-v1.0.7.spkg
modules:
  - name: map_accounts
    kind: map
    initialBlock: {{#if (eq CHAIN_ID "10")}}124734205{{else if (eq CHAIN_ID "11155420")}}124734205{{/if}}
    inputs:
      - source: sf.ethereum.type.v2.Block
    output:
      type: proto:exa.Accounts
  - name: store_accounts
    kind: store
    updatePolicy: set
    valueType: proto:exa.Accounts
    inputs:
      - map: map_accounts
  - name: map_swaps
    kind: map
    initialBlock: {{#if (eq CHAIN_ID "10")}}124734205{{else if (eq CHAIN_ID "11155420")}}124734205{{/if}}
    inputs:
      - source: sf.ethereum.type.v2.Block
      - store: store_accounts
    output:
      type: proto:exa.Swaps
  - name: db_out
    kind: map
    inputs:
      - map: map_swaps
    output:
      type: proto:sf.substreams.sink.database.v1.DatabaseChanges
sink:
  module: db_out
  type: sf.substreams.sink.sql.v1.Service
  config:
    schema: node_modules/@exactly/server/generated/schema.sql
    engine: postgres
binaries:
  default:
    type: wasm/rust-v1
    file: target/wasm32-unknown-unknown/release/substreams.wasm
