specVersion: v0.1.0
package:
  name: exactly
  version: v0.1.0
protobuf:
  files:
    - exa.proto
  importPaths:
    - proto
imports:
  sql: https://github.com/streamingfast/substreams-sink-sql/releases/download/protodefs-v1.0.7/substreams-sink-sql-protodefs-v1.0.7.spkg
network: {{#if (eq CHAIN_ID "10")}}optimism{{else}}opsepolia{{/if}}
modules:
  - name: map_blocks
    kind: map
    initialBlock: {{#if (eq CHAIN_ID "10")}}78_311_238{{else}}7_420_743{{/if}}
    {{!-- 7_420_743 --}}
    inputs:
      - source: sf.ethereum.type.v2.Block
    output:
      type: proto:exa.Events
  - name: store_borrow_shares
    kind: store
    updatePolicy: add
    valueType: bigint
    inputs:
      - map: map_blocks
  - name: store_deposit_shares
    kind: store
    updatePolicy: add
    valueType: bigint
    inputs:
      - map: map_blocks
  - name: store_fixed_borrows
    kind: store
    updatePolicy: add
    valueType: bigint
    inputs:
      - map: map_blocks
  - name: db_out
    kind: map
    inputs:
      - source: sf.substreams.v1.Clock
      - map: map_blocks
      - store: store_borrow_shares
        mode: deltas
      - store: store_deposit_shares
        mode: deltas
      - store: store_fixed_borrows
        mode: deltas
    output:
      type: proto:sf.substreams.sink.database.v1.DatabaseChanges
sink:
  module: db_out
  type: sf.substreams.sink.sql.v1.Service
  config:
    schema: node_modules/@exactly/server/generated/schema.sql
    engine: postgres
binaries:
  default:
    type: wasm/rust-v1
    file: target/wasm32-unknown-unknown/release/substreams.wasm
