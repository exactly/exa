{
  "name": "@exactly/common",
  "version": "0.0.9",
  "private": true,
  "scripts": {
    "prepare": "nx prepare:* common",
    "prepare:*": "true",
    "prepare:git": "git config blame.ignoreRevsFile .git-blame-ignore-revs || true",
    "generate:wagmi": "wagmi generate",
    "git:unshallow": "git fetch --unshallow || true"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@alchemy/aa-core": "^3.19.0",
    "valibot": "^1.2.0",
    "viem": "^2.40.3"
  },
  "devDependencies": {
    "@exactly/plugin": "workspace:^1.1.0",
    "@exactly/protocol": "^0.2.22",
    "@wagmi/cli": "^2.8.0"
  },
  "peerDependencies": {
    "wagmi": "^2.18.1"
  },
  "peerDependenciesMeta": {
    "wagmi": {
      "optional": true
    }
  },
  "nx": {
    "projectType": "library",
    "targets": {
      "prepare:*": {
        "dependsOn": [
          "prepare:git",
          "generate:wagmi"
        ]
      },
      "generate:wagmi": {
        "outputs": [
          "{projectRoot}/generated"
        ]
      },
      "git:unshallow": {
        "cache": false
      }
    }
  }
}
