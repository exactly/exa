{
  "name": "@exactly/common",
  "version": "0.0.10",
  "private": true,
  "scripts": {
    "prepare": "nx run-many -t prepare:git generate:wagmi -p common",
    "prepare:git": "git config blame.ignoreRevsFile .git-blame-ignore-revs || true",
    "generate:wagmi": "wagmi generate",
    "git:unshallow": "git fetch --unshallow || true"
  },
  "engines": {
    "node": "~24.12.0"
  },
  "dependencies": {
    "@alchemy/aa-core": "^3.19.0",
    "valibot": "^1.2.0",
    "viem": "^2.40.3"
  },
  "devDependencies": {
    "@exactly/plugin": "workspace:^1.1.0",
    "@exactly/protocol": "^0.2.22",
    "@wagmi/cli": "^2.8.0"
  },
  "peerDependencies": {
    "wagmi": "^2.18.1"
  },
  "peerDependenciesMeta": {
    "wagmi": {
      "optional": true
    }
  },
  "nx": {
    "projectType": "library",
    "targets": {
      "prepare": {
        "dependsOn": [
          "prepare:git",
          "generate:wagmi"
        ],
        "executor": "nx:noop"
      },
      "generate:wagmi": {
        "inputs": [
          "^production",
          "{projectRoot}/wagmi.config.ts",
          {
            "env": "CHAIN_ID"
          },
          {
            "env": "EAS_BUILD_RUNNER"
          },
          {
            "dependentTasksOutputFiles": "contracts/out/**/*.json"
          },
          {
            "dependentTasksOutputFiles": "contracts/broadcast/*/31337/*.json"
          }
        ],
        "dependsOn": [
          "^build",
          {
            "projects": "@exactly/server",
            "target": "generate:broadcasts"
          }
        ],
        "outputs": [
          "{projectRoot}/generated"
        ]
      },
      "git:unshallow": {
        "cache": false
      }
    }
  }
}
