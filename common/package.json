{
  "name": "@exactly/common",
  "version": "0.0.12",
  "private": true,
  "scripts": {
    "prepare": "nx prepare common",
    "prepare:git": "git config blame.ignoreRevsFile .git-blame-ignore-revs || true",
    "generate:wagmi": "wagmi generate",
    "git:unshallow": "git fetch --unshallow || true",
    "test": "nx test common",
    "test:ts": "tsc --pretty ${GITHUB_ACTIONS:+false}"
  },
  "engines": {
    "node": "^24.13.0"
  },
  "dependencies": {
    "@account-kit/infra": "catalog:",
    "valibot": "catalog:",
    "viem": "catalog:"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
    "@eslint/js": "^9.39.2",
    "@eslint-react/eslint-plugin": "^2.7.2",
    "@exactly/plugin": "workspace:^1.1.0",
    "@exactly/protocol": "^0.2.22",
    "@nx/eslint-plugin": "^22.3.3",
    "@tanstack/eslint-plugin-query": "^5.91.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/eslint-plugin-security": "^3.0.0",
    "@vitest/eslint-plugin": "^1.6.6",
    "@wagmi/cli": "^2.8.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-universe": "^15.0.3",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "eslint-plugin-perfectionist": "^5.3.1",
    "prettier": "^3.8.0",
    "typescript-eslint": "^8.53.1"
  },
  "peerDependencies": {
    "wagmi": "catalog:"
  },
  "peerDependenciesMeta": {
    "wagmi": {
      "optional": true
    }
  },
  "nx": {
    "projectType": "library",
    "targets": {
      "prepare": {
        "dependsOn": [
          "prepare:git",
          "generate:wagmi"
        ],
        "executor": "nx:noop"
      },
      "generate:wagmi": {
        "inputs": [
          "^production",
          "{projectRoot}/wagmi.config.ts",
          {
            "env": "CHAIN_ID"
          },
          {
            "env": "EAS_BUILD_RUNNER"
          },
          {
            "dependentTasksOutputFiles": "contracts/out/**/*.json"
          },
          {
            "dependentTasksOutputFiles": "contracts/broadcast/*/31337/*.json"
          }
        ],
        "dependsOn": [
          "^build",
          {
            "projects": "@exactly/server",
            "target": "generate:broadcasts"
          }
        ],
        "outputs": [
          "{projectRoot}/generated"
        ]
      },
      "git:unshallow": {
        "cache": false
      },
      "test": {
        "dependsOn": [
          "test:eslint",
          "test:ts"
        ],
        "executor": "nx:noop"
      }
    }
  }
}
