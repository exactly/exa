{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "pretty": true,
    "strict": true,
    "checkJs": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "expo-font/plugin/build/withFonts": ["./node_modules/expo-font/plugin/build/withFonts.d.ts"],
      "@intercom/intercom-react-native/lib/typescript/module/expo-plugins/@types": [
        "./node_modules/@intercom/intercom-react-native/lib/typescript/module/expo-plugins/@types.d.ts"
      ]
    }
  },
  "include": [
    "*.config.ts",
    "*.config.js",
    "*.config.cjs",
    "*.config.mjs",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/index.js"
  ]
}
