{
  "name": "@exactly/server",
  "scripts": {
    "build": "pkgroll --sourcemap --src .",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject dist && sentry-cli sourcemaps upload -o exactly -p mobile dist",
    "db:push": "drizzle-kit push",
    "test": "pnpm run --aggregate-output /test:/",
    "test:ts": "tsc",
    "test:vi": "vitest run",
    "dev": "tsx --watch --env-file=.env --require=./instrument.cjs index.ts"
  },
  "bin": "./dist/index.cjs",
  "files": [
    ".well-known",
    "dist",
    "instrument.cjs"
  ],
  "engines": {
    "node": ">=22.8.0"
  },
  "dependencies": {
    "@alchemy/aa-core": "^3.19.0",
    "@hono/node-server": "^1.12.2",
    "@hono/sentry": "^1.2.0",
    "@hono/valibot-validator": "^0.3.0",
    "@onesignal/node-onesignal": "^5.0.0-alpha-01",
    "@sentry/node": "^8.30.0",
    "@sentry/profiling-node": "^8.30.0",
    "@simplewebauthn/server": "^10.0.1",
    "@simplewebauthn/types": "^10.0.0",
    "@types/debug": "^4.1.12",
    "async-mutex": "^0.5.0",
    "debug": "^4.3.7",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.1",
    "ioredis": "^5.4.1",
    "ioredis-mock": "^8.9.0",
    "libphonenumber-js": "^1.11.8",
    "pg": "^8.12.0",
    "redis-semaphore": "^5.6.0",
    "valibot": "^0.41.0",
    "viem": "^2.21.6"
  },
  "devDependencies": {
    "@exactly/common": "workspace:*",
    "@exactly/plugin": "workspace:*",
    "@sentry/cli": "^2.36.1",
    "@types/ioredis-mock": "^8.2.5",
    "@types/node": "^22.5.4",
    "@types/pg": "^8.11.9",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "@wagmi/core": "^2.13.5",
    "drizzle-kit": "^0.24.2",
    "execa": "^9.3.1",
    "pkgroll": "^2.5.0",
    "prool": "^0.0.16",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.0",
    "webauthn-owner-plugin": "exactly/webauthn-owner-plugin#42b67f8"
  }
