{
  "name": "@exactly/server",
  "version": "0.2.31",
  "private": true,
  "scripts": {
    "build": "pkgroll --sourcemap --src . && sentry-cli sourcemaps inject -o exactly -p server dist",
    "prepare": "(git fetch --unshallow || true) && pnpm run --aggregate-output --reporter-hide-prefix /prepare:/",
    "prepare:release": "mkdir -p generated && echo \"module.exports = /** @type {const} */ ('$(git describe --tags --abbrev=7 --match '@exactly/server@*' | sed 's/@exactly\\///')')\" > generated/release.js",
    "openapi": "tsx script/openapi.ts",
    "db:push": "drizzle-kit push",
    "test": "bash -c 'if [[ -z \"$GITHUB_ACTIONS\" ]]; then pnpm run /test:/; else set -o pipefail && pnpm run --aggregate-output --reporter-hide-prefix /test:/ 2>&1 | perl -pe \"s|(?<![a-zA-Z0-9/\\.@])([a-zA-Z][^\\s:\\\"]*?/[^\\s:\\\"]+)|server/\\1|g\"; fi'",
    "test:ts": "tsc --pretty $([ \"$GITHUB_ACTIONS\" = true ] && echo false || echo true)",
    "test:vi": "vitest run",
    "test:openapi": "pnpm openapi",
    "spotlight:replay": "for f in node_modules/@exactly/.spotlight/*; do curl --data-binary @$f -H content-type:application/x-sentry-envelope http://localhost:8969/stream; done",
    "dev": "tsx --watch --env-file=.env --require=./instrument.cjs index.ts"
  },
  "bin": "./dist/index.cjs",
  "exports": {
    "./api": "./dist/api/index.d.ts",
    "./api/activity": "./dist/api/activity.d.ts",
    "./script/liquidator": "./dist/script/liquidator.cjs"
  },
  "files": [
    "app",
    "dist",
    "generated/release.js",
    "instrument.cjs"
  ],
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@alchemy/aa-core": "^3.19.0",
    "@exactly/lib": "^0.1.0",
    "@hono/node-server": "^1.19.5",
    "@hono/sentry": "^1.2.2",
    "@hono/valibot-validator": "^0.5.3",
    "@onesignal/node-onesignal": "^5.3.1-beta1",
    "@segment/analytics-node": "^2.3.0",
    "@sentry/core": "^9.46.0",
    "@sentry/node": "^9.46.0",
    "@sentry/profiling-node": "^9.46.0",
    "@simplewebauthn/server": "^13.1.2",
    "@types/debug": "^4.1.12",
    "@types/pg": "^8.15.6",
    "@valibot/to-json-schema": "^1.3.0",
    "async-mutex": "^0.5.0",
    "bullmq": "^5.61.0",
    "debug": "^4.4.3",
    "drizzle-orm": "^0.44.6",
    "graphql": "^16.10.0",
    "hono": "^4.10.3",
    "hono-openapi": "^0.4.8",
    "i18n-iso-countries": "^7.14.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "redis-semaphore": "^5.6.2",
    "valibot": "^1.0.0",
    "viem": "^2.38.3"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@exactly/common": "workspace:^0.0.8",
    "@exactly/plugin": "workspace:^1.0.0",
    "@sentry/cli": "^2.57.0",
    "@types/ioredis-mock": "^8.2.6",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@wagmi/core": "^2.22.1",
    "drizzle-kit": "^0.31.5",
    "execa": "^9.6.0",
    "ioredis-mock": "^8.13.0",
    "openapi-types": "^12.1.3",
    "pkgroll": "^2.20.1",
    "prool": "^0.0.24",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "webauthn-owner-plugin": "exactly/webauthn-owner-plugin#42b67f8"
  }
}
