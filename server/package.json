{
  "name": "@exactly/server",
  "type": "module",
  "scripts": {
    "test": "tsc",
    "db:migration:generate": "drizzle-kit generate:pg --schema=./database/schema.ts",
    "db:migration:push": "bun run database/migrate.ts",
    "db:migrate": "bun db:migration:generate && bun db:migration:push",
    "dev": "bun run --cwd .. vercel dev"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@onesignal/node-onesignal": "^2.0.1-beta2",
    "@sentry/node": "^7.110.1",
    "@vercel/node": "^3.0.26",
    "@vercel/postgres": "^0.8.0",
    "@wagmi/core": "2.6.17",
    "debug": "^4.3.4",
    "drizzle-orm": "^0.30.8",
    "viem": "2.9.19",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "drizzle-kit": "^0.20.14",
    "typescript": "^5.4.5",
    "vercel": "^34.0.0"
  }
}
