{
  "name": "@exactly/server",
  "version": "0.2.44",
  "private": true,
  "scripts": {
    "build": "pkgroll --sourcemap --src . && sentry-cli sourcemaps inject -o exactly -p server dist",
    "prepare": "nx generate:release server",
    "prepare:generated": "mkdir -p generated",
    "generate:release": "echo \"module.exports = /** @type {const} */ ('$(git describe --tags --abbrev=7 --match '@exactly/server@*' | sed 's/@exactly\\///')')\" > generated/release.js",
    "generate:openapi": "tsx script/openapi.ts",
    "generate:broadcasts": "[ \"$CHAIN_ID\" != 31337 ] || tsx -e 'require(\"./test/anvil\").default({ provide: () => undefined }).then((teardown) => teardown())'",
    "db:push": "drizzle-kit push",
    "e2e": "tsx script/e2e.ts",
    "test": "nx run-many -t test:ts test:vi test:openapi -p server",
    "test:ts": "tsc --pretty ${GITHUB_ACTIONS:+false}",
    "test:vi": "vitest run",
    "test:openapi": "nx generate:openapi server",
    "spotlight:replay": "for f in node_modules/@exactly/.spotlight/*; do curl --data-binary @$f -H content-type:application/x-sentry-envelope http://localhost:8969/stream; done",
    "dev": "tsx --watch --env-file=.env --require=./instrument.cjs index.ts"
  },
  "bin": "./dist/index.cjs",
  "files": [
    "app",
    "dist",
    "generated/release.js",
    "instrument.cjs"
  ],
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@alchemy/aa-core": "^3.19.0",
    "@exactly/lib": "^0.1.0",
    "@hono/node-server": "^1.19.5",
    "@hono/sentry": "^1.2.2",
    "@hono/valibot-validator": "^0.5.3",
    "@onesignal/node-onesignal": "^5.3.1-beta1",
    "@segment/analytics-node": "^2.3.0",
    "@sentry/core": "^10.30.0",
    "@sentry/node": "^10.30.0",
    "@sentry/profiling-node": "^10.30.0",
    "@simplewebauthn/server": "^13.1.1",
    "@types/debug": "^4.1.12",
    "@valibot/to-json-schema": "^1.3.0",
    "async-mutex": "^0.5.0",
    "bullmq": "^5.61.0",
    "debug": "^4.4.3",
    "drizzle-orm": "^0.44.6",
    "graphql": "^16.10.0",
    "hono": "^4.10.3",
    "hono-openapi": "^0.4.8",
    "i18n-iso-countries": "^7.14.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.2",
    "pg": "^8.16.3",
    "redis-semaphore": "^5.6.2",
    "valibot": "^1.2.0",
    "viem": "^2.40.3"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@exactly/common": "workspace:^0.0.10",
    "@exactly/plugin": "workspace:^1.1.0",
    "@sentry/cli": "^2.57.0",
    "@types/ioredis-mock": "^8.2.6",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@wagmi/core": "^2.22.1",
    "drizzle-kit": "^0.31.8",
    "execa": "^9.6.0",
    "ioredis-mock": "^8.13.0",
    "openapi-types": "^12.1.3",
    "pkgroll": "^2.20.1",
    "prool": "^0.0.24",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4",
    "webauthn-owner-plugin": "exactly/webauthn-owner-plugin#9c0c38b"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "generate:release": {
        "dependsOn": [
          "prepare:generated",
          {
            "projects": "@exactly/common",
            "target": "git:unshallow"
          }
        ],
        "inputs": [],
        "outputs": [
          "{projectRoot}/generated/release.js"
        ],
        "cache": false
      },
      "generate:openapi": {
        "outputs": [
          "{projectRoot}/openapi.json"
        ]
      },
      "generate:broadcasts": {
        "dependsOn": [
          {
            "projects": "@exactly/plugin",
            "target": "build"
          }
        ],
        "inputs": [
          "{projectRoot}/test/anvil.ts",
          "^production",
          {
            "env": "CHAIN_ID"
          }
        ],
        "outputs": [
          "{workspaceRoot}/contracts/broadcast/Protocol.s.sol/31337/run-latest.json"
        ]
      },
      "test:vi": {
        "dependsOn": [
          "prepare",
          "^prepare",
          "^build"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ]
      },
      "e2e": {
        "dependsOn": [
          "prepare",
          "^prepare",
          "^build"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "continuous": true
      }
    }
  }
}
