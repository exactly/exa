{
  "name": "@exactly/server",
  "version": "0.2.55",
  "private": true,
  "scripts": {
    "build": "pkgroll --sourcemap --src . && sentry-cli sourcemaps inject -o exactly -p server dist",
    "prepare": "nx prepare server",
    "prepare:generated": "mkdir -p generated",
    "generate:release": "echo \"module.exports = /** @type {const} */ ('$(git describe --tags --abbrev=7 --match '@exactly/server@*' | sed 's/@exactly\\///')')\" > generated/release.js",
    "generate:openapi": "tsx script/openapi.ts",
    "generate:sql": "POSTGRES_URL=postgres drizzle-kit export > generated/schema.sql",
    "generate:broadcasts": "[ \"$CHAIN_ID\" != 31337 ] || NODE_ENV=development tsx -e 'require(\"./test/anvil\").default({ provide: () => undefined }).then((teardown) => teardown())'",
    "db:push": "drizzle-kit push",
    "e2e": "tsx script/e2e.ts",
    "test": "nx test server",
    "test:ts": "tsc --pretty ${GITHUB_ACTIONS:+false}",
    "test:vi": "vitest run",
    "test:openapi": "nx generate:openapi server",
    "spotlight:replay": "for f in node_modules/@exactly/.spotlight/*; do curl --data-binary @$f -H content-type:application/x-sentry-envelope http://localhost:8969/stream; done",
    "dev": "tsx --watch --env-file=.env --require=./instrument.cjs index.ts"
  },
  "bin": "./dist/index.cjs",
  "files": [
    "app",
    "dist",
    "generated/release.js",
    "instrument.cjs"
  ],
  "engines": {
    "node": "^24.13.0"
  },
  "dependencies": {
    "@account-kit/infra": "catalog:",
    "@exactly/lib": "^0.1.0",
    "@hono/node-server": "^1.19.9",
    "@hono/sentry": "^1.2.2",
    "@hono/valibot-validator": "^0.5.3",
    "@onesignal/node-onesignal": "^5.3.1-beta1",
    "@segment/analytics-node": "^2.3.0",
    "@sentry/core": "^10.35.0",
    "@sentry/node": "^10.35.0",
    "@sentry/profiling-node": "^10.35.0",
    "@simplewebauthn/server": "^13.2.2",
    "@types/debug": "^4.1.12",
    "@valibot/to-json-schema": "^1.5.0",
    "async-mutex": "^0.5.0",
    "bullmq": "^5.66.5",
    "debug": "^4.4.3",
    "drizzle-orm": "^0.45.1",
    "graphql": "^16.12.0",
    "hono": "^4.11.7",
    "hono-openapi": "^0.4.8",
    "i18n-iso-countries": "^7.14.0",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "pg": "^8.17.1",
    "redis-semaphore": "^5.6.2",
    "valibot": "catalog:",
    "viem": "catalog:"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@exactly/common": "workspace:^0.0.11",
    "@exactly/plugin": "workspace:^1.1.0",
    "@exactly/substreams": "workspace:^0.1.0",
    "@sentry/cli": "^3.1.0",
    "@types/ioredis-mock": "^8.2.6",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/wait-on": "^5.3.4",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "@wagmi/core": "catalog:",
    "drizzle-kit": "^0.31.8",
    "embedded-postgres": "^18.1.0-beta.15",
    "eslint": "^9.39.2",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "execa": "^9.6.1",
    "ioredis-mock": "^8.13.1",
    "openapi-types": "^12.1.3",
    "pkgroll": "^2.21.5",
    "prool": "^0.2.2",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3",
    "webauthn-owner-plugin": "exactly/webauthn-owner-plugin#9c0c38b"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "prepare": {
        "dependsOn": [
          "generate:release",
          "generate:sql"
        ],
        "executor": "nx:noop"
      },
      "generate:release": {
        "dependsOn": [
          "prepare:generated",
          {
            "projects": "@exactly/common",
            "target": "git:unshallow"
          }
        ],
        "inputs": [],
        "outputs": [
          "{projectRoot}/generated/release.js"
        ],
        "cache": false
      },
      "generate:openapi": {
        "dependsOn": [
          "prepare:generated"
        ],
        "outputs": [
          "{projectRoot}/generated/openapi.json"
        ]
      },
      "generate:sql": {
        "dependsOn": [
          "prepare:generated"
        ],
        "inputs": [
          "{projectRoot}/database/schema.ts",
          "{projectRoot}/drizzle.config.ts"
        ],
        "outputs": [
          "{projectRoot}/generated/schema.sql"
        ]
      },
      "generate:broadcasts": {
        "dependsOn": [
          {
            "projects": "@exactly/plugin",
            "target": "build"
          }
        ],
        "inputs": [
          "{projectRoot}/test/anvil.ts",
          "^production",
          {
            "env": "CHAIN_ID"
          },
          {
            "dependentTasksOutputFiles": "contracts/out/**/*.json"
          }
        ],
        "outputs": [
          "{workspaceRoot}/contracts/broadcast/*/31337/run-latest.json"
        ]
      },
      "generate:app": {
        "dependsOn": [
          {
            "projects": "@exactly/mobile",
            "target": "build"
          }
        ],
        "inputs": [
          {
            "dependentTasksOutputFiles": "dist"
          }
        ],
        "outputs": [
          "{projectRoot}/app"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "rm -rf server/app && cp -r dist server/app"
        }
      },
      "test": {
        "dependsOn": [
          "test:eslint",
          "test:ts",
          "test:vi",
          "test:openapi"
        ],
        "executor": "nx:noop"
      },
      "test:vi": {
        "dependsOn": [
          "prepare",
          "^prepare",
          "^build"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ]
      },
      "e2e": {
        "dependsOn": [
          "prepare",
          "^prepare",
          "^build"
        ],
        "inputs": [
          "default",
          "^production"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "continuous": true
      }
    }
  }
}
