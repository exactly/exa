{
  "name": "@exactly/e2e",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare": "nx build e2e",
    "test": "nx test e2e",
    "test:ts": "tsc --pretty ${GITHUB_ACTIONS:+false}",
    "dev": "nx dev e2e"
  },
  "engines": {
    "node": "^24.13.0"
  },
  "devDependencies": {
    "@exactly/common": "workspace:^0.0.11",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fast-text-encoding": "^1.0.6",
    "typescript": "catalog:",
    "viem": "catalog:"
  },
  "nx": {
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "minify": true,
          "thirdParty": true,
          "outputPath": "dist",
          "platform": "neutral",
          "tsConfig": "{projectRoot}/tsconfig.json",
          "esbuildConfig": "{projectRoot}/esbuild.config.cjs",
          "main": "src/script/*.ts"
        }
      },
      "dev": {
        "continuous": true,
        "dependsOn": [
          "^prepare",
          "^build"
        ],
        "executor": "@nx/esbuild:esbuild",
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "watch": true,
          "thirdParty": true,
          "outputPath": "dist",
          "platform": "neutral",
          "tsConfig": "{projectRoot}/tsconfig.json",
          "esbuildConfig": "{projectRoot}/esbuild.config.cjs",
          "main": "src/script/*.ts"
        }
      },
      "test": {
        "dependsOn": [
          "test:eslint",
          "test:ts"
        ],
        "executor": "nx:noop"
      }
    }
  },
  "private": true
}
